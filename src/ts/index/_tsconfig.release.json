{
    "compilerOptions":
    {
        "module": "system",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "outFile": "main.js",
        "preserveConstEnums": false,
        "removeComments": true,
        "sourceMap": false
    },
    "include":
    [
        "./**/*"
    ],
    "exclude":
    [
        "../../node_modules",
        "../../**/*.spec.ts"
    ]
}